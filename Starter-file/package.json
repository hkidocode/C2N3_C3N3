{
  "name": "covid19-website",
  "version": "0.1.0",
  "description": "A website which contains how to detect corona virus through specific questions from the Ministry of Health and some advice to prevent it and keep ourselves safe.",
  "main": "script.js",
  "scripts": {
    "compile": "node-sass sass/fichier.scss dist/css/style.css",
    "watch": "node-sass sass/fichier.scss dist/css/style.css --watch",
    "concat": "concat -o dist/css/style.concat.css dist/css/additional.css dist/css/style.comp.css",
    "prefix": "postcss dist/css/style.concat.css --use=autoprefixer --map=false --output=dist/css/style.prefix.css",
    "compress": "node-sass dist/css/style.prefix.css dist/css/style.css --output-style compressed",
    "build": "npm-run-all watch concat prefix compress"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hkidocode/C2N3_C3N3.git"
  },
  "author": "Mustapha Kadouri",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/hkidocode/C2N3_C3N3/issues"
  },
  "homepage": "https://github.com/hkidocode/C2N3_C3N3#readme",
  "devDependencies": {
    "autoprefixer": "^9.7.5",
    "concat": "^1.0.3",
    "node-sass": "^4.13.1",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^7.1.0"
  }
}
